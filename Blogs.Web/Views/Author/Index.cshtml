@using Blogs.Domain.InputModels
@model NewAuthor

@{
    ViewData["Title"] = "Add Author";
}

<div class="container-fluid" style="max-width:924px;">
    <div class="row">
        <div class="col-8">
            <h1><i class="fa-solid fa-person"></i> Author</h1>
        </div>
    </div>
    <form method="post">
        <fieldset>
            <div class="table">
                <div class="row">
                    <div class="col-12" text-danger asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.Alias" class="form-label"></label>
                    </div> 
                    <div class="col-9">
                        <input asp-for="@Model.Alias" class="form-control"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-outline-success">Registrar autor</button>
                       
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
   
</div>